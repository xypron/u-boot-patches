 	if (fat_itr_isdir(&dir->itr)) {
 		dent->type = FS_DT_DIR;
+		dent->size = 0;
 	} else {
 		dent->type = FS_DT_REG;
 		dent->size = FAT2CPU32(dir->itr.dent->size);
