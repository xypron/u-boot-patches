+		goto out;
+	}
+	efiobj = efi_search_obj(image_handle);
+	if (!efiobj) {
+		ret = EFI_INVALID_PARAMETER;
+		goto out;
+	}
+
+	image_obj = (struct efi_loaded_image_obj *)efiobj;
+	switch (image_obj->header.type) {
+	case EFI_OBJECT_TYPE_STARTED_IMAGE:
+		break;
+	case EFI_OBJECT_TYPE_LOADED_IMAGE:
+		/*  Unload image that was not yet started */
+		free(image_obj->reloc_base);
+		efi_delete_handle(&image_obj->header);
+		ret = EFI_SUCCESS;
+		goto out;
+	default:
+		/* Handle does not refer to loaded image */
+		ret = EFI_INVALID_PARAMETER;
+		goto out;
+	}
+
+	image_obj->exit_status = exit_status;
+	if (exit_data) {
+		ret = efi_allocate_pool(EFI_BOOT_SERVICES_DATA, exit_data_size,
+					(void**)image_obj->exit_data);
+		if (ret != EFI_SUCCESS)
+			goto out;
+		image_obj->exit_data_size = exit_data_size;
+		memcpy(image_obj->exit_data, exit_data, exit_data_size);
+	}
+
 	/* Make sure entry/exit counts for EFI world cross-overs match */
 	EFI_EXIT(exit_status);
 
