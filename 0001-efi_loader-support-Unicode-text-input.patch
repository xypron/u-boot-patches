+/**
+ * read_string() - read byte from character string
+ *
+ * @src:	- pointer to string
+ * Return:	- byte read
+ *
+ * The string pointer is incremented if it does not point to '\0'.
+ */
+static s32 read_string(const char **src)
+{
+	s32 c;
+
+	if (!src || !*src || !**src)
+		return 0;
+	c = (unsigned char)**src;
 	++*src;
-	return code;
+	return c;
+}
