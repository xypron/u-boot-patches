 {
@@ -113,6 +133,9 @@ static int do_ut_print(cmd_tbl_t *cmdtp, int flag, int argc,
 	/* Test efi_loader specific printing */
 	efi_ut_print();
 
+	/* Test printing GUIDs */
+	guid_ut_print();
+
 	printf("%s: Everything went swimmingly\n", __func__);
 	return 0;
 }
